<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>QuickLink-Shorten your URL Quickly!</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <div class="container">
      <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">QuickLink</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
        </div>
      </nav>
      <div class="mb-3 my-3">
        <form method="POST" action="/url">
        <label for="basic-url" class="form-label">Enter your URL</label>
        <div class="input-group">
          <span class="input-group-text" id="basic-addon3"
            >https://www.example.com</span
          >
          <input
            type="text"
            class="form-control"
            id="basic-url"
            aria-describedby="basic-addon3 basic-addon4"
            name="url"
          />
          <div class="col-auto">
            <button type="submit" class="btn btn-primary mx-3">Generate</button>
          </div>
        </div>
        <div class="form-text" id="basic-addon4">
          Generates a Short-ID for your long URL.
        </div>
      </form>
      </div>
      <!-- Display the shortened URL if it exists -->
      <% if (locals.id) { %>
        <div class="mb-3">
          <label for="formGroupExampleInput" class="form-label">Generated QuickLink:</label>
          <p><a href="http://localhost:8007/url/<%= id %>" target="_blank" class="link-success">http://localhost:8007/url/<%= id %></a></p> 
        </div>
      <% } %>

      <!-- Display the shortened URLs data in tabular form -->
      <div class="container">
      <% if (locals.urls) { %>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Short-ID</th>
              <th scope="col">Redirect-URL</th>
              <th scope="col">Clicks</th>
            </tr>
          </thead>
          <tbody>
           <% urls.forEach((url,index) => { %>
            <tr>
              <th scope="row"><%= index + 1  %></th>
              <td><%= url.shortId  %></td>
              <td><%= url.redirectURL   %></td>
              <td><%= url.visitHistory.length  %></td>
            </tr>
           <% }) %>
          </tbody>
        </table>
      <% } %>
    </div>
    </div>
  </body>
</html>
